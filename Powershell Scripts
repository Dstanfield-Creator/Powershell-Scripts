    $tabPage2.Controls.AddRange(@($btnT2Start,$btnT2Add,$btnT2Remove,$txtT2User1,$txtT2User2,$lblT2User1,$lblUser2,$lstT2User1,$lstT2User2,$btnT2LoadGroups,$lblInfo,$btnT2Clear))
